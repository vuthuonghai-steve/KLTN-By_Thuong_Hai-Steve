{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "NODE_ENV": "development",
    "NEXT_PUBLIC_SITE_URL": "http://localhost:3000"
  },

  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "bash /home/steve/Documents/KLTN/.claude/hooks/pre-write-check.sh",
            "timeout": 10
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "bash /home/steve/Documents/KLTN/.claude/hooks/session-end.sh",
            "timeout": 100,
            "async": true
          }
        ]
      }
    ]
  },

  "enabledPlugins": {
    "feature-dev@claude-plugins-official": true,
    "code-review:code-review@claude-plugins-official": true
  },
  "language": "vietnamese",
  "includeCoAuthoredBy": true
}
